@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <form asp-action="ShowSearchResults">

            <h4>Player Search</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => "SearchPhrase", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => "SearchPhrase", new { htmlAttributes = new { @class = "form-control" } })
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="Search" value="Search" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
