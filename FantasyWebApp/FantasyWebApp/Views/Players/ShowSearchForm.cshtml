@model FantasyWebApp.Models.Player


@using (Html.BeginForm("ShowSearchResults", "Players")) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <form asp-action="ShowSearchResults">
            <h4>Player Search</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                NAME
                <label for="NameSearchPhrase" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input name="NameSearchPhrase" class="form-control">
                </div>
            </div>

            <div class="form-group">
                POSITION
                <label for="PosSearchPhrase" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input name="PosSearchPhrase" class="form-control">
                </div>
            </div>

            <div class="form-group">
                TEAM
                <label for="TeamSearchPhrase" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input name="TeamSearchPhrase" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
